<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/imageToolListItem"
        android:layout_width="95dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/nameToolListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imageToolListItem"
        android:text="Tool name"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"

        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/distanceToolListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameToolListItem"
        android:layout_alignStart="@+id/nameToolListItem"
        android:layout_below="@+id/nameToolListItem"
        android:text="Distance"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/pricePerDayToolListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x,xx e"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_alignTop="@+id/distanceToolListItem"
        android:layout_alignRight="@+id/nameToolListItem"
        android:layout_alignEnd="@+id/nameToolListItem"
        android:textSize="12dp" />

</RelativeLayout>