<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f9eab6">

    <ImageView
        android:id="@+id/imageToolListItem"
        android:layout_width="100px"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10px"
        android:background="#f21c1c" />

    <TextView
        android:id="@+id/nameToolListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imageToolListItem"
        android:layout_margin="10px"
        android:text="Tool name"
        android:textAppearance="?android:attr/textAppearanceLarge"

        />

    <TextView
        android:id="@+id/distanceToolListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameToolListItem"
        android:layout_alignStart="@+id/nameToolListItem"
        android:layout_below="@+id/nameToolListItem"
        android:text="Distance"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/pricePerDayToolListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/distanceToolListItem"
        android:text="x,xx e"
        android:layout_margin="10px"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>